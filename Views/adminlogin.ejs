<%-include('Header')-%>
<body>
<section class="main">
    <div class="container py-5 h-100 sub-cl">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div
            class="card bg-white bg-opacity-10 text-white card-sec"
            style="border-radius: 1rem"
          >
            <div class="card-body p-5 text-center">
              <div class="mt-md-4">
                <% if(errmsg) {%>
                  <div id="errorDiv" class="alert alert-danger">
                    <strong><%=errmsg%>
                    </strong>
                  </div>
                <%}%>
                <h2 class="log-shadow fw-bold mb-4 text-uppercase">Hello there Admin</h2>
                <form action="/adminlog" method="POST">
                  <br>
                  <div class="form-outline form-primary mb-4">
                    <input
                      name="userID"
                      type="text"
                      id="userIDX"
                      class="form-control form-control-lg"
                      placeholder="User ID"
                      required
                    />
                  </div>
                  <br>
                  <div class="form-outline form-white mb-4">
                    <input
                    name="password"
                      type="password"
                      id="typePasswordX"
                      class="form-control form-control-lg"
                      placeholder="Password"
                      required
                    />
                  </div>
                  <br />
                  <br />
                  <button class="btn btn-outline-light btn-lg px-5" type="submit">
                    Login
                  </button>
                  <br>
                  <br>
                  <div >
                    <a class="text-light no-under" href="/">User login</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

<%-include('footer')-%>
